<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0e0e0">


    <RelativeLayout
        android:id="@+id/fragment_my_dianji"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="#019858">
        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/default_avatar"
            android:layout_width="70dp"
            android:layout_height="70dp" />
        <TextView
            android:layout_marginLeft="110dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="50dp"
            android:text="点击登录"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/fragment_my_jifen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="#01814a"
            android:layout_marginBottom="20dp">
            <ImageView
                android:layout_gravity="center"
                android:background="@drawable/point"
                android:layout_width="25dp"
                android:layout_height="25dp" />
            <Button
                android:background="#01814a"
                android:layout_width="85dp"
                android:layout_height="25dp"
                android:text="@string/integral_rules"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:focusable="false"
                android:clickable="false"
                android:focusableInTouchMode="false" />
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#f0f0f0">
        <LinearLayout
            android:id="@+id/fragment_my_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <ImageView
                android:layout_marginTop="8dp"
                android:background="@drawable/ic_new_post"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="帖子"/>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/fragment_my_attention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <ImageView
                android:layout_marginTop="8dp"
                android:background="@drawable/ic_attention"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关注"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/fragment_my_fan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <ImageView
                android:layout_marginTop="8dp"
                android:background="@drawable/ic_fan"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="粉丝"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/fragment_my_order"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#f0f0f0">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp">
            <ImageView
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:background="@drawable/my_order_new"
                android:layout_width="18dp"
                android:layout_height="18dp" />
            <TextView
                android:layout_marginLeft="45dp"
                android:layout_centerVertical="true"
                android:text="@string/fragment_my_orders"
                android:textSize="18dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:background="@drawable/back_web_nor"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_alignParentBottom="true"
                android:background="#e0e0e0"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/fragment_my_collect"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="5dp">
            <ImageView
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:background="@drawable/my_collect_new"
                android:layout_width="18dp"
                android:layout_height="18dp" />
            <TextView
                android:layout_marginLeft="45dp"
                android:layout_centerVertical="true"
                android:text="@string/fragment_my_collect"
                android:textSize="18dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:background="@drawable/back_web_nor"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_alignParentBottom="true"
                android:background="#e0e0e0"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/fragment_my_like"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="5dp">
            <ImageView
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_my_like"
                android:layout_width="18dp"
                android:layout_height="18dp" />
            <TextView
                android:layout_marginLeft="45dp"
                android:layout_centerVertical="true"
                android:text="@string/fragment_my_like"
                android:textSize="18dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:background="@drawable/back_web_nor"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_alignParentBottom="true"
                android:background="#e0e0e0"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/fragment_my_setting"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="5dp">
            <ImageView
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:background="@drawable/my_setting_new"
                android:layout_width="18dp"
                android:layout_height="18dp" />
            <TextView
                android:layout_marginLeft="45dp"
                android:layout_centerVertical="true"
                android:text="@string/fragment_my_setting"
                android:textSize="18dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:background="@drawable/back_web_nor"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_alignParentBottom="true"
                android:background="#e0e0e0"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/fragment_my_feedback"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="5dp">
            <ImageView
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:background="@drawable/my_feedback_new"
                android:layout_width="18dp"
                android:layout_height="18dp" />
            <TextView
                android:layout_marginLeft="45dp"
                android:layout_centerVertical="true"
                android:text="@string/fragment_my_feedback"
                android:textSize="18dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:background="@drawable/back_web_nor"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_alignParentBottom="true"
                android:background="#e0e0e0"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>