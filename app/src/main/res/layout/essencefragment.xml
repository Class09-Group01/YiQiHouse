<?xml version="1.0" encoding="utf-8"?>
<com.bwf.aiyiqi.gui.view.CustomRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
                               android:id="@+id/essence_fragmenat_refresh"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >
        <android.support.v7.widget.RecyclerView
            android:id="@+id/essence_fragmenat_recycleview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageButton
            android:id="@+id/essence_fragmenat_button_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="15dp"
            android:src="@drawable/float_layer_menu_normal"/>
        <ImageButton
            android:id="@+id/essence_fragmenat_button_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="15dp"
            android:visibility="gone"
            android:src="@drawable/float_layer_menu_close"/>
    </FrameLayout>

</com.bwf.aiyiqi.gui.view.CustomRefreshLayout>