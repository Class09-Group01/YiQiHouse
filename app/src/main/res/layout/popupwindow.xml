<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:background="@color/ColorGraylight">

    <LinearLayout
        android:id="@+id/popupwindow_linearlayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginLeft="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="380dp">
        <ImageButton
            android:id="@+id/create_feed_normal"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:src="@drawable/create_feed_normal"
            android:background="@color/ColorGraylight"
            />
        <TextView
            android:id="@+id/create_feed_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/popupwindow_linearlayout1"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textColor="@color/black"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/popupwindow_linearlayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="380dp"
        android:layout_marginLeft="220dp">
        <ImageView
            android:id="@+id/show_order_normal"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:src="@drawable/show_order_normal"
            />
        <TextView
            android:id="@+id/show_order_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/popupwindow_linearlayout2"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textColor="@color/black"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/popupwindow_linearlayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginLeft="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="180dp">
        <ImageView
            android:id="@+id/create_note_normal"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:src="@drawable/create_note_normal"
            />
        <TextView
            android:id="@+id/create_note_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/popupwindow_linearlayout3"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textColor="@color/black"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/popupwindow_linearlayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="180dp"
        android:layout_marginLeft="220dp">
        <ImageView
            android:id="@+id/create_complain_normal"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:src="@drawable/create_complain_normal"
          />
        <TextView
            android:id="@+id/create_complain_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/popupwindow_linearlayout4"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textColor="@color/black"/>
    </LinearLayout>
    <ImageButton
        android:id="@+id/essence_fragmenat_button_close"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
       android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/float_layer_menu_close"
        android:background="@color/colorWhiteLight"
        />

</RelativeLayout>